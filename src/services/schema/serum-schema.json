{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "cache": {
      "type": "object",
      "required": ["marketsInformation", "markets"],
      "properties": {
        "marketsInformation": {
          "type": "integer"
        },
        "markets": {
          "type": "integer"
        }
      }
    },
    "events": {
      "type": "object",
      "required": ["limit"],
      "properties": {
        "limit": {
          "type": "object",
					"required": ["consumeEvents", "matchOrders"],
					"properties": {
						"consumeEvents": {
							"type": "integer"
						},
            "matchOrders": {
							"type": "integer"
						}
					}
        }
      }
    },
		"orders": {
      "type": "object",
      "required": ["create", "cancel", "filled"],
      "properties": {
        "create": {
          "type": "object",
					"required": ["maxPerTransaction"],
					"properties": {
						"maxPerTransaction": {
							"type": "integer"
						}
					}
        },
        "cancel": {
          "type": "object",
					"required": ["maxPerTransaction"],
					"properties": {
						"maxPerTransaction": {
							"type": "integer"
						}
					}
        },
        "filled": {
          "type": "object",
					"required": ["limit"],
					"properties": {
						"limit": {
							"type": "integer"
						}
					}
        }
      }
    },
    "markets": {
      "type": "object",
      "required": ["url"],
      "properties": {
        "url": { "type": "string" },
        "blacklist": {
          "type": ["array", "null"]
        },
        "whitelist": {
          "type": ["array", "null"]
        }
      }
    },
    "tickers": {
      "type": "object",
      "required": ["sources"],
      "properties": {
        "sources": {
          "type": "object",
          "patternProperties": {
            "^..+$": {
              "type": ["object", "null"],
              "properties": {
                "url": {
                  "type": [
                    "string",
                    "null"
                  ]
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      }
    },
		"transactions": {
      "type": "object",
      "required": ["merge"],
      "properties": {
        "merge": {
          "type": "object",
					"required": ["createOrders", "cancelOrders", "settleFunds"],
					"properties": {
						"createOrders": { "type": "boolean" },
						"cancelOrders": { "type": "boolean" },
						"settleFunds": { "type": "boolean" }
					}
        }
      }
    }
	},
  "required": [
		"cache",
		"orders",
    "markets",
    "tickers",
		"transactions"
  ],
  "additionalProperties": false
}
